<h1 class="mt-5" align="center">All Alpha Bloggers</h1>

<div class="container pagination justify-content-center">
  <%= paginate @users %>
</div>

<div align="center">
  <% @users.each do | user | %>
    <ul class="listing">
      <div class="row">
        <div class="card col-md-4 offset-4 bg-light">
          <li class="mt-1"><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="article-title"><%= link_to user.username, user_path(user) %></li>
          <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
          <% if logged_in? and current_user.admin? %>
            <li>
              <%=
                link_to "Delete this user",
                          user_path(user),
                          method: :delete,
                          data: { confirm: "Are you sure you want to delete this user and all their articles?" }
              %>
            </li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
</div>

<div class="container pagination justify-content-center">
  <%= paginate @users %>
</div>
