<%= render 'shared/errors', obj: @article %>

<%= form_for @article do | f | %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", placeholder: "Body of article", rows: 10 %>
  </div>
  <div class="form-group">
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do | checkbox | %>
      <%= checkbox.label(class: "checkbox-inline input_checkbox") { checkbox.check_box(class: "checkbox") + checkbox.text } %>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
<div class="col-xs-4 offset-4">
  [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
</div>